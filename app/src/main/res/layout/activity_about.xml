<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/rv_appbar"
            android:background="@drawable/appbar_background"
            android:layout_width="match_parent"
            android:layout_height="60dp">


            <ImageButton
                android:id="@+id/btn_about"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/about"/>

            <TextView
                android:id="@+id/tv_about"
                android:text="About"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/btn_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rv3"
            android:layout_above="@+id/rv_developer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/about1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">



                    <ImageView
                        android:layout_marginTop="30dp"
                        android:id="@+id/logo"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@mipmap/logo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_below="@+id/logo"
                        android:id="@+id/appname"
                        android:layout_width="wrap_content"
                        android:text="Covid-19 Tracker"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textSize="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"/>


                    <RelativeLayout
                        android:id="@+id/rvversion"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/appname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/version"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="@color/blacklight"
                            android:text="Current Version "
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/version_n"
                            android:layout_centerHorizontal="true"
                            android:layout_toRightOf="@+id/version"
                            android:layout_width="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="@color/blacklight"
                            android:text="@string/appversion"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/version_n_0"
                            android:layout_centerHorizontal="true"
                            android:layout_toRightOf="@+id/version_n"
                            android:layout_width="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="@color/blacklight"
                            android:text=".0"
                            android:layout_height="wrap_content"/>


                    </RelativeLayout>


                    <TextView
                        android:id="@+id/disclaimer"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="70dp"
                        android:layout_below="@id/rvversion"
                        android:fontFamily="sans-serif-condensed"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textSize="12dp"
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/disclaimer"/>



                </RelativeLayout>


            </ScrollView>




        </RelativeLayout>





        <RelativeLayout
            android:id="@+id/rv_developer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="10dp"
            android:background="@drawable/viewstatebutton_background"
            android:layout_alignParentBottom="true">


            <TextView
                android:id="@+id/developer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:text="Build By : Aniket"/>

            <TextView
                android:id="@+id/developer_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:layout_below="@+id/developer"
                android:text="Mail : aniketprasad51@gmail.com"/>



        </RelativeLayout>




    </RelativeLayout>









</androidx.constraintlayout.widget.ConstraintLayout>